@import 'nib'
@import 'nib/gradients'

global-reset()

banner_width = 150px
banner_height = 600px

red = #e60000

body
    opacity: 0
    cursor: pointer
    image: '../img/bg.jpg' banner_width banner_height
    width: banner_width
    height: banner_height
    overflow: hidden
    color: white
    font-family: 'VodafoneRegular', Helvetica, Arial, sans-serif
    user-select: none;
    -webkit-touch-callout: none;
    //-webkit-font-smoothing: antialiased;
    //-webkit-font-smoothing: subpixel-antialiased;

    &.still
        background-image: url('../img/still.jpg')

ul.questions
    list-style: none
    display: block
    top: 90px
    absolute: relative

    li
        absolute: top 0 left 0
        opacity: 1
        padding: 0 20px
        font-size: 20px
        font-family: 'VodafoneBoldRegular', Helvetica, Arial, sans-serif
        width:110px
        line-height: 1.25

        i
            display: block
            font-style: normal

header
    absolute: top left
    z-index: 100

    .center
        absolute: left 74px top 180px
        width: 40px; height: 40px

        .red-center
            absolute: right 20px bottom -8px
            width:0; height:0

        .red-area, .white-area, .red-back
            absolute: left 0 top 0
            width: 500px
            height: 500px
            border-radius: 20px

        .red-area
            //transform: rotate(225deg) skew(90deg, 0)
            transform-origin: 0px 0px
            background-color: red

        .white-area
            display: none
            transform: rotate(225deg)
            absolute: left 1px top 1px
            transform-origin: 19px 19px
            background-color: white

        .icon
            position: relative
            width: 40px; height: 40px
            image: '../img/icon.png' @width @height

            .glow
                absolute: top 0 left 0
                background-image: url('../img/glow.png')
                width: 40px; height: 40px
    .text
        opacity: 0

        h1, h2, h3
            position: relative
            padding: 0 10px

        h1
            font-family: 'VodafoneBoldRegular', Helvetica, Arial, sans-serif
            font-size: 15px
            line-height: 19px
            padding-top:12px

        h2
            padding-top: 10px
            font-family: 'VodafoneLightRegular', Helvetica, Arial, sans-serif
            font-size: 14px
            i
                line-height: 19px
                font-style: normal
                font-size: 32px
                vertical-align: -4px

        h3
            padding-top: 16px
            font-family: 'VodafoneLightRegular', Helvetica, Arial, sans-serif
            font-size: 18px

#phone
    width: 130px; height 274px
    image: '../img/phone.png' @width @height
    absolute: bottom 102px left 10px

    .clock
        margin: 66px auto 0 auto
        text-align: center
        font-size: 30px
        font-weight: 200
        font-family: 'VodafoneLightRegular', Helvetica, Arial, sans-serif

        .sep
            margin: 0 4px

    .messages
        position: relative
        height: 98px
        margin-top: 9px
        overflow: hidden

        ul
            position: relative
            list-style: none
            display: block

            li
                padding: 4px 15px 4px 14px
                margin: 0 10px 0 11px
                display: block
                font-size: 10px
                border-bottom: 1px solid rgba(56, 200, 210, 0.3)

                h1
                    image: '../img/email.png' 21px 21px
                    background-repeat: no-repeat
                    padding-left: 27px
                    height: 21px
                    line-height: @height
                    font-family: 'VodafoneBoldRegular', Helvetica, Arial, sans-serif

                h2
                    padding: 8px 2px 0 2px
                    line-height: 125%

#icons
    position: absolute
    top: 238px
    display: none
    transform: scale(0.85, 0.85);

    .icon
        background-repeat: no-repeat
        background-position: 50% 0
        width: 120px
        padding: 48px 5px 12px 5px
        margin: 16px 10px 0 10px
        border-bottom: 2px dotted white
        text-align: center
        font-size: 15px

        i, b
            font-weight: normal
            font-style: normal
            line-height: 1.1

        &.email
            image: '../img/icon-email.png' 42px 28px

        &.phone
            image: '../img/icon-simi.png' 23px 39px

            b
                font-size: 17px

        &.talk
            image: '../img/icon-tal.png' 40px 36px
            i
                font-size: 12px
            b
                font-size: 15px
